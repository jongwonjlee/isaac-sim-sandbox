<launch>
    <node pkg="rviz2" exec="rviz2" name="rviz" args="-d $(env WORK_DIR)/ros/default.rviz" output="screen">
        <param name="use_sim_time" value="True" />
    </node>

    <executable cmd="ros2 topic pub --rate 10 /cmd_vel geometry_msgs/msg/Twist '{linear: {x: 3.0}, angular: {z: -0.5}}'"
                output="screen"/>

    <executable cmd="ros2 topic echo /tf"
                output="screen"/>

</launch>